<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">



       <TextView
           android:id="@+id/enter_landing_speed"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="  Enter Brake on Speed, AC Wgt, Temp and R/W Elev"
           android:textSize="17sp">

       </TextView>



    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="1dp"


        android:layout_marginTop="24dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_weight="1">

        <EditText
            android:id="@+id/Brake_on_Speed"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:height="0dp"


            android:hint="Brake on Spd"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Weight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:height="0dp"


            android:hint="Weight"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/OAT"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:height="0dp"

            android:hint="OAT"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="19sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Elevation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:height="0dp"

            android:hint="Elevation"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="19sp"
            android:textStyle="bold" />
    </TableRow>



    </TableLayout>


    <Button
        android:id="@+id/Calculate"
        android:layout_width="219dp"
        android:layout_height="66dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:onClick="Calculate"
        android:text="Calculate"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="1dp"


        android:layout_marginTop="14dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="4dp">

        <EditText
            android:id="@+id/CalcUplift"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:ems="10"
            android:hint="Calc Uplift"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textSize="21sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ExpectedLitres"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:ems="0"
            android:hint="Uplift Req"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="21sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ActualLitres"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:ems="0"
            android:hint="Actual Ltr"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="21sp"
            android:textStyle="bold" />
    </TableRow>


    </TableLayout>


</androidx.appcompat.widget.LinearLayoutCompat>